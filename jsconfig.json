{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": false,
        "baseUrl": ".",
        "checkJs": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es7"
        ],
        "module": "commonjs",
        "newLine": "LF",
        "paths": {
            "UI/*": [
                "./src/UI/*"
            ]
        },
        "pretty": true,
        "rootDir": "./src",
        "strict": false,
        "target": "esnext",
        "watch": true
    },
    "include": [
        "./src/*"
    ],
    "typeAcquisition": {
        "include": [
            "react"
        ]
    },
}